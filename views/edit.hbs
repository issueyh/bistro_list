<form action="/restaurants/{{restaurant._id}}/edit" method="POST"
    class="col-12 d-flex flex-column align-items-around mt-5 mb-5">
    <div class="form-group">
        <label for="name">餐廳名稱</label>
        <input type="text" class="form-control" name="name" id="name" aria-label="name"
            placeholder="請輸入餐廳名稱 如：布娜飛比利時啤酒餐廳" value="{{ restaurant.name }}" required>
    </div>
    <div class="form-group">
        <label for="category">餐廳類別</label>
        <select class="form-control" name="category" id="category" selected={{ restaurant.category }}
            aria-label="category" placeholder="請選擇類別" required>
            <option value="0" style="display:none">請選擇</option>
            <option value="日式料理">日式料理</option>
            <option value="中東料理">中東料理</option>
            <option value="義式餐廳">義式餐廳</option>
            <option value="美式">美式</option>
            <option value="酒吧">酒吧</option>
            <option value="咖啡">咖啡</option>
        </select>
    </div>
    <div class="form-group">
        <label for="image">餐廳照片</label>
        <input type="text" class="form-control" name="image" id="image" aria-label="image"
            placeholder="請輸入照片網址 如：https://assets-lighthouse.s3.amazonaws.com/uploads/image/file/5634/08.jpg"
            value="{{ restaurant.image }}" required>
    </div>
    <div class="form-group">
        <label for="location">餐廳地址</label>
        <input type="text" class="form-control" name="location" id="location" aria-label="location"
            placeholder="請輸入餐廳地址 如：台北市松山區市民大道四段 185 號" value="{{ restaurant.location }}" required>
    </div>
    <div class="form-group">
        <label for="phone">餐廳電話</label>
        <input type="text" class="form-control" name="phone" id="phone" aria-label="phone"
            placeholder="請輸入聯絡電話 如：02 2570 1255" value="{{ restaurant.phone }}" required>
    </div>
    <div class="form-group">
        <label for="google_map">餐廳地圖</label>
        <input type="text" class="form-control" name="google_map" id="google_map" aria-label="google_map"
            placeholder="請輸入地圖網址 如：https://goo.gl/maps/V9mKwVJ4s5v" value="{{ restaurant.google_map }}" required>
    </div>
    <div class="form-group">
        <label for="rating">餐廳評分</label>
        <input type="number" min="0" max="5" step="0.1" class="form-control" name="rating" id="rating"
            aria-label="rating" placeholder="請輸入餐廳評分(0 ~ 5.0星)" value="{{ restaurant.rating }}" required>
    </div>
    <div class="form-group">
        <label for="description">餐廳簡介</label>
        <textarea type="text" class="form-control" name="description" id="description" aria-label="description"
            placeholder="請輸入餐廳簡介 如：加上一股對比利時啤酒的熱情， 於是「Bravo Beer布娜飛比利時啤酒餐廳」在2006年誕生了..."
            required>{{ restaurant.description }}</textarea>
    </div>
    <div class="d-flex flex-row justify-content-center col-12">
        <button type="submit" class="btn btn-info mr-2">儲存</button>
        <button class="btn btn-secondary">
            <a href="/" class="text-light" style="text-decoration: none;">返回</a>
        </button>
    </div>
</form>